<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <title>Projects</title>
</head>

<body>

    <h1 class="container mt-5">Project Management</h1>

    <div class="container">
        <form action="/projects" method="POST" class="w-50 mt-5">
            <div class="form-group">
                <input type="text" class="form-control mt-2" id="project-name" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control mt-2" id="project-description" name="description" placeholder="Description">
            </div>
            <div class="form-group">
                <input type="number" class="form-control mt-2" id="project-price" name="price" placeholder="Price">
            </div>
            <div class="form-group">
                <input type="text" class="form-control mt-2" id="jobs-done" name="jobs" placeholder="Jobs done">
            </div>
            <div class="form-group">
                <input type="date" class="form-control mt-2" id="start-date" name="start" placeholder="Start date">
            </div>
            <div class="form-group">
                <input type="date" class="form-control mt-2" id="end-date" name="end" placeholder="End date">
            </div>
            <div class="form-group">
                <input type="text" class="form-control mt-2" id="members" name="members" placeholder="Members">
            </div>
            <button type="submit" class="btn btn-success mt-2 w-100 justify-center">Add</button>
          </form>
    </div>

    <div class="container mt-5 w-100">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Jobs done</th>
                    <th scope="col">Start date</th>
                    <th scope="col">Members</th>
                    <th scope="col">End date</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Details</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < projects.length; i++) {%>  
                <tr>
                    <td><%= projects[i].name %></td>
                    <td><%= projects[i].description %></td>
                    <td><%= projects[i].price %></td>
                    <td><%= projects[i].jobs %></td>
                    <td><%= projects[i].start %></td>
                    <td><%= projects[i].members %></td>
                    <td><%= projects[i].end %></td>
                    <td><button type="button" class="btn btn-primary edit-button"><a class="text-white text-decoration-none" href="/projects/edit/<%= projects[i]._id %>">Edit</a></button></td>
                    <td><button type="button" class="btn btn-primary"><a class="text-white text-decoration-none" href="/projects/details/<%= projects[i]._id %>">Details</a></button></td>
                    <td><button type="button" class="btn btn-danger delete"><a class="text-white text-decoration-none" href="/projects/delete/<%= projects[i]._id %>">Delete</a></button></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>